<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">


    <TextView
        android:id="@+id/tv_settings_name"
        android:layout_width="114dp"
        android:layout_height="42dp"
        android:text="@string/settings_name"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_backgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/background_color_name"
        app:layout_constraintBottom_toBottomOf="@+id/sp_background_colors"
        app:layout_constraintEnd_toStartOf="@+id/sp_background_colors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_background_colors"
        tools:text="@string/background_color_name" />

    <Spinner
        android:id="@+id/sp_background_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp" />
</androidx.constraintlayout.widget.ConstraintLayout>